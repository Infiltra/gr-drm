<?xml version="1.0"?>
<block>
  <name>time and fractional frequency synchronization, robustness mode detection</name>
  <key>drmrx_cp_sync_py</key>
  <category>drmrx</category>
  <import>import drmrx</import>
  <make>drmrx.cp_sync_py(rx)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>rx</name>
    <key>rx</key>
    <type>raw</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>reset_in</name>
    <type>msg</type>
    <optional>1</optional>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>reset_out</name>
    <type>msg</type>
    <optional>1</optional>
  </source>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>

