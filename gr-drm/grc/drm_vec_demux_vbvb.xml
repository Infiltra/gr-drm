<?xml version="1.0"?>
<block>
  <name>DRM Vector Demux</name>
  <key>drm_vec_demux_vbvb</key>
  <category>drm</category>
  <import>import drm</import>
  <make>drm.vec_demux_vbvb($vlen_in, $n_out, $vlen_out)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Input vector length</name>
    <key>vlen_in</key>
    <type>int</type>
  </param>
  <param>
    <name>Number of output ports</name>
    <key>n_out</key>
    <type>int</type>
  </param>
  <param>
    <name>Output vector lengths</name>
    <key>vlen_out</key>
    <type>int_vector</type>
  </param>
  <check>$vlen_in &gt; 0</check>
  <check>$n_out &gt; 1</check>
  <check>$n_out == len($vlen_out)</check>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
    <vlen>$vlen_in</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
    <nports>$n_out</nports>
  </source>
</block>
