<block>
  <name>Scrambler</name>
  <key>drm_scrambler_vbvb</key>
  <category>DRM</category>
  <import>import drm</import>
  <make>drm.scrambler_vbvb($block_len)</make>
  <param>
    <name>Block Length</name>
    <key>block_len</key>
    <type>raw</type>
  </param>
  <sink>
    <name>in</name>
    <type>byte</type>
    <vlen>$block_len</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
    <vlen>$block_len</vlen>
  </source>
</block>
